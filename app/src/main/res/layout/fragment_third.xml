<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdFragment"
    android:background="@drawable/background_gradient">

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_above="@+id/textView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/geostar_fill"
        android:gravity="center"
        android:text="Personal Information"
        android:textColor="@color/dark_grey"
        android:textSize="35sp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="We will need some information to improve the accuracy of our testing."
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/lastname"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="First Name:"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/age"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="Last Name:"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView7"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="Age: "
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView6"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="Weight(lbs):"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView5"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="Height(in):"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="Gender:"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="25sp" />

    <Button
        android:id="@+id/toFragment4"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="175dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/geostar_fill"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/beige"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Firstname"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Lastname"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:fontFamily="@font/abel"
        android:inputType="text" />

    <EditText
        android:id="@+id/Lastname"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Age"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:fontFamily="@font/abel"
        android:inputType="text" />

    <EditText
        android:id="@+id/Age"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Weight"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:fontFamily="@font/abel"
        android:inputType="number" />

    <EditText
        android:id="@+id/Weight"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Height"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:fontFamily="@font/abel"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/Height"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Gender"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:fontFamily="@font/abel"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/Gender"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:fontFamily="@font/abel"
        android:inputType="text" />



</RelativeLayout>